generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name     String
  reports  Report[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Report {
  id      String @id @default(uuid())
  content String
  generatorId String?
  generator    User?   @relation(fields: [generatorId], references: [id])

  studentName          String
  studentActualCourse  String
  studentTargetCourse String
  registration         String

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
